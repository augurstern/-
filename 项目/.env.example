# 环境配置
NODE_ENV=production

# 服务器配置
PORT=3000

# 数据库配置
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=contract_management

# JWT配置
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRES_IN=1d

# 文件存储配置
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=.pdf,.docx,.doc,.xlsx,.xls,.pptx,.ppt,.jpg,.jpeg,.png

# 备份配置
BACKUP_DIR=./backups
AUTO_BACKUP_INTERVAL=86400000 # 24h
MAX_BACKUP_COUNT=30 